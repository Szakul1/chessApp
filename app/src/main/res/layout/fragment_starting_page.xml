<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".gui.StartingPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:background="#70000000"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="110sp"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:text="@string/chess_app" />

    <Button
        android:onClick="gameWithBot"
        android:backgroundTint="@color/black"
        android:layout_width="250sp"
        android:layout_height="70sp"
        android:layout_margin="20sp"
        android:textSize="18sp"
        android:text="@string/play_with_bot" />

    <Button
        android:onClick="gameWithPlayer"
        android:backgroundTint="@color/black"
        android:layout_width="250sp"
        android:layout_height="70sp"
        android:layout_margin="20sp"
        android:textSize="18sp"
        android:text="@string/play_with_friend" />

</LinearLayout>
